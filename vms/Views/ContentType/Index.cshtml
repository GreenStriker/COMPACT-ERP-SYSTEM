@model IEnumerable<vms.entity.models.Contenttype>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Inventory.Utility
@using vms.entity.viewModels
@{
    // var session = Context.Session.GetComplexData<vms.entity.viewModels.vmSession>("session");
}

    <div class="product-status mg-tb-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-status-wrap">
                        <h4>Content Type </h4>
                        @using (Html.BeginForm("Index", "vat", FormMethod.Get, new { id = "frmProduct" }))
                        {
                    <div class="row">

                        <div class="col-md-5">
                            <div class="input-group Search" style="margin-top:10px">
                                <input type="text" class="form-control" placeholder="Search..." id="search" name="search" value="@ViewBag.searchText">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn submit ">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>


                        <div class="add-product">
                            <a href="@Url.Action("Create", "ContentType")" class="btn btn-success btn-sm pull-right"><i class="fa fa-plus"></i> Add</a>
                        </div>
                    </div>


                        }
                        <table >
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        Content Name
                                    </th>

                                    @*<th>Action</th>*@
                                </tr>
                            </thead>

                            @if (Model.Any())
                            {
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>



                                            @*<td>
                                                <div class="btn-group">
                                                    <div class="dropdown dropdown-user">
                                                        <a style="text-decoration:none" href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                                            <span class=""> Action </span>
                                                            <i class="fa fa-angle-down"></i>
                                                        </a>
                                                        <ul class="dropdown-menu dropdown-menu-default pull-right">


                                                            <li>
                                                                <a asp-action="Edit" asp-route-id="@item.ContentTypeId"><i class="fa fa-pencil-square-o"></i> Edit</a>
                                                            </li>


                                                        </ul>
                                                    </div>
                                                </div>

                                            </td>*@

                                        </tr>
                                    }
                                </tbody>
                            }

                            else
                            {
                                <tr>
                                    <td colspan="10">
                                        <p style="text-align: center">No Records Found</p>
                                    </td>
                                </tr>
                            }

                        </table>
                        <div class="pager">
                            @Html.PagedListPager(
                                (IPagedList)Model,
                                page => Url.Action("Index", new { page })
                                )
                        </div>  
                    </div>   
                </div> 
            </div>  
        </div>   
    </div>
