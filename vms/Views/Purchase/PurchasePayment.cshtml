@model vms.entity.viewModels.VmDuePayment

@{
    ViewData["Title"] = "PurchasePayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="custom-page-title">Purchase Payment</h1>
    </div>
</div>
<h3>@ViewData["Message"]</h3>
<input type="hidden" asp-for="PurchaseId" />
<div class="row">
    <div class="col-md-12">

        <form asp-action="PurchasePayment" class="form-horizontal" id="frmusercreate">
            <div class="form-body">

                <div>
                    @await Html.PartialAsync("DuePaymentPartial", Model)

                </div>

            </div>

            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                      
                        <button type="submit" data-requiredconfirmation="true" class="btn  green"><i class="fa fa-floppy-o"></i> Submit</button>
                        <a href="~/Purchase/PurchaseDue" class="btn btn-default"><i class="fa fa-ban"></i> Cancel</a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
