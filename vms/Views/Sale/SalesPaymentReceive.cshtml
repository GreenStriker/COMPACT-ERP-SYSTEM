@model vms.entity.viewModels.VmDuePayment

@{
    ViewData["Title"] = "SalesPaymentReceive";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <h1 class="custom-page-title">Sales Payment Receive</h1>
    </div>
</div>
<h3>@ViewData["Message"]</h3>
<input type="hidden" asp-for="SalesId" />
<div class="row">
    <div class="col-md-12">

        <form asp-action="SalesPaymentReceive" class="form-horizontal">
            <div class="form-body">
              
                <div>
                    @await Html.PartialAsync("DuePaymentPartial", Model)

                </div>



            </div>

            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">

                        <button type="submit" data-requiredconfirmation="true" class="btn  green"><i class="fa fa-floppy-o"></i> Submit</button>
                        <a href="~/Sale/SalesDue" class="btn btn-default"><i class="fa fa-ban"></i> Cancel</a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
