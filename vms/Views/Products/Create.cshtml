<div class="row">
    <div class="col-lg-12">
        <h1 class="custom-page-title">Add Product</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" class="form-horizontal" id="frmusercreate" enctype="multipart/form-data">

            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Name : </label>
                    <div class="col-md-4">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">M. Unit : </label>
                    <div class="col-md-4">

                        @Html.DropDownListFor(x => Model.MunitId, new SelectList(Model.MeasurementUnits, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
                        <span asp-validation-for="MunitId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Vat : </label>
                    <div class="col-md-4">

                        @Html.DropDownListFor(x => Model.VatId, new SelectList(Model.ProductVattypes, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
                        <span asp-validation-for="VatId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Code : </label>
                    <div class="col-md-4">
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Model No : </label>
                    <div class="col-md-4">
                        <input asp-for="ModelNo" class="form-control" />
                        <span asp-validation-for="ModelNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Image : </label>
                    <div class="col-md-4">
                        <input type="file" id="UploadFile" name="UploadFile"/>
                        <label></label>
                    </div>
                </div>


            </div>

            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9" style="margin-bottom:20px">
                        <button type="submit" data-requiredconfirmation="true" class="btn  green"><i class="fa fa-floppy-o"></i> Submit</button>

                        <a href="~/Products/Index" class="btn btn-default"><i class="fa fa-ban"></i> Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
